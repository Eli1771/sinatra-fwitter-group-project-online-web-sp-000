<h2><%= @tweet.user.username %></h2>
<p><%= @tweet.content %></p>

<% if Helpers.current_user(session) == @tweet.user && Helpers.is_logged_in?(session) %>
<form action="/tweets/<%= @tweet.id %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Tweet" id="delete">
</form>
<% end %>

<a href = "/tweets/<%= @tweet.id %>/edit">Edit Tweet</a><br>
<a href = "/users/<%= @tweet.user_id %>">Visit <%= @tweet.user.username %>'s' Page</a><br>
<a href = "/tweets">Return to Feed</a>

<br><br>
<a href="/logout">Log Out</a>
